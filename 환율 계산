import java.util.Scanner;

public class Dollar {
    public static void main(String[] args){
        Scanner scan = new Scanner(System.in);
        System.out.print("원화를 입력하세요(단위:원) : ");
        int won = scan.nextInt();
        System.out.printf("%d원은 $%.2f입니다.", won, (double)won / 1260);
    }
}
